# HackTheAgent - Environment Variables Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env with real credentials to version control

# ============================================
# IBM Watson Services
# ============================================

# Watson Orchestrate - API Key for IBM Cloud authentication
# Get from: https://cloud.ibm.com/iam/apikeys
WATSON_ORCHESTRATE_API_KEY=your-api-key-here

# Watson Orchestrate - Base URL (region and instance specific)
# Get from: https://cloud.ibm.com/orchestrate/
WATSON_ORCHESTRATE_BASE_URL=https://api.us-south.watson-orchestrate.cloud.ibm.com/instances/your-instance-id

# Watson Orchestrate - Instance ID (alternative to including in URL)
WATSON_INSTANCE_ID=your-instance-id

# Watson Orchestrate - Region (us-south, jp-tok, eu-gb, etc.)
WATSON_REGION=us-south

# Watson X - API credentials
WATSONX_API_KEY=your-watsonx-api-key
WATSONX_PROJECT_ID=your-watsonx-project-id
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# IBM IAM Authentication URL
IBM_IAM_URL=https://iam.cloud.ibm.com/identity/token

# IBM API Root endpoint
IBM_API_ROOT=https://api.watson-orchestrate.cloud.ibm.com

# ============================================
# Gmail OAuth Configuration
# ============================================

# Get credentials from: https://console.cloud.google.com/
# Create OAuth2 credentials for "Desktop application"
GMAIL_CLIENT_ID=your-gmail-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:3000/oauth/callback

# ============================================
# Microsoft Outlook OAuth Configuration (Optional)
# ============================================

OUTLOOK_CLIENT_ID=your-outlook-client-id
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret
OUTLOOK_TENANT_ID=common

# ============================================
# Database
# ============================================

# SQLAlchemy connection string
# Examples:
#   sqlite:///./email_brain.db
#   postgresql://user:password@localhost/hacktheagent
#   mysql://user:password@localhost/hacktheagent
DATABASE_URL=sqlite:///./emails.db

# ============================================
# Redis Cache (Optional)
# ============================================

# Redis connection string for caching
# Example: redis://localhost:6379/0
REDIS_URL=

# Cache TTL in seconds (default 300 = 5 minutes)
CACHE_TTL=300

# ============================================
# Application Settings
# ============================================

# Debug mode (true/false)
DEBUG=false

# Application name
APP_NAME=HackTheAgent Email Brain

# Application version
APP_VERSION=1.0.0

# ============================================
# Analytics Configuration
# ============================================

# Enable/disable analytics tracking
ENABLE_ANALYTICS=true

# Analytics data retention period in hours
ANALYTICS_RETENTION_HOURS=24

# Maximum active users to cap metrics at
MAX_ACTIVE_USERS=100

# Default metrics (used if no data available)
DEFAULT_ACCURACY=0.947
DEFAULT_RESPONSE_TIME=127ms
DEFAULT_EMAILS_PROCESSED=287
DEFAULT_EMAILS_TODAY=45
NEW_USERS_WEEK=1

# Benchmark targets
BENCHMARK_EMAIL_LOAD_MS=89
BENCHMARK_SEARCH_MS=127
BENCHMARK_RAG_MS=1800
BENCHMARK_CLASS_MS=45
BENCHMARK_NORM_MS=23

# ============================================
# LLM Configuration
# ============================================

# LLM Provider: watsonx, openai, or ollama
LLM_PROVIDER=watsonx

# Model name
LLM_MODEL=ibm/granite-13b-chat-v2

# Model temperature (0.0 - 2.0)
LLM_TEMPERATURE=0.1

# Maximum tokens in response
LLM_MAX_TOKENS=2048

# OpenAI API key (if using OpenAI)
OPENAI_API_KEY=

# ============================================
# Embedding Configuration
# ============================================

# Embedding provider: sentence-transformers, watsonx, or openai
EMBEDDING_PROVIDER=sentence-transformers

# Embedding model name
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# Vector Database
# ============================================

# Vector DB: chroma or faiss
VECTOR_DB=chroma

# Collection name for embeddings
COLLECTION_NAME=email_embeddings

# ============================================
# CORS Configuration
# ============================================

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=*

# ============================================
# Ports and URLs
# ============================================

# Backend API URL
BACKEND_URL=http://localhost:8000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# ============================================
# Security & Secrets (NEVER share these!)
# ============================================

# Session secret key (generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-here

# JWT secret (generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))")
JWT_SECRET=your-jwt-secret-here
