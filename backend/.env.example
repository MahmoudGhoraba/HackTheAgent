# HackTheAgent Email Brain Configuration

# App Settings
DEBUG=false
APP_NAME="HackTheAgent Email Brain"

# Embedding Settings
EMBEDDING_PROVIDER=sentence-transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Vector Database
VECTOR_DB=chroma
COLLECTION_NAME=email_embeddings

# Chunking Settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# LLM Settings
LLM_PROVIDER=watsonx
LLM_MODEL=openai/gpt-oss-120b
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# IBM watsonx Credentials (Optional - for RAG answers)
# Get your credentials from: https://cloud.ibm.com/
WATSONX_API_KEY=your_watsonx_api_key_here
WATSONX_PROJECT_ID=your_project_id_here
WATSONX_URL=https://us-south.ml.cloud.ibm.com

# OpenAI Credentials (Alternative LLM provider)
# OPENAI_API_KEY=your_openai_api_key_here

# Gmail OAuth Credentials
# Get your credentials from: https://console.cloud.google.com/apis/credentials
# 1. Create a new OAuth 2.0 Client ID
# 2. Set application type to "Web application"
# 3. Add authorized redirect URI: http://localhost:3000/oauth/callback
# 4. Copy Client ID and Client Secret below
GMAIL_CLIENT_ID=your_gmail_client_id_here.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_gmail_client_secret_here
GMAIL_REDIRECT_URI=http://localhost:3000/oauth/callback

# CORS Settings
CORS_ORIGINS=["*"]